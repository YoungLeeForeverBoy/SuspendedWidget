<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/big_widget_rl"
    android:background="@color/transparent_dark_bg" >
    <LinearLayout
        android:id="@+id/collect_btn_ll"
        android:layout_above="@+id/buy_btn_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/collect_btn"
            android:layout_width="@dimen/small_widget_width"
            android:layout_height="@dimen/small_widget_height"
            android:layout_marginRight="25dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/collect"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buy_btn_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/select_btn_ll"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/buy_btn"
            android:layout_width="@dimen/small_widget_width"
            android:layout_height="@dimen/small_widget_height"
            android:layout_marginRight="20dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/buy"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/select_btn_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_btn_ll"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/select_btn"
            android:layout_width="@dimen/small_widget_width"
            android:layout_height="@dimen/small_widget_height"
            android:layout_marginRight="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/select"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_btn_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_btn_ll"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/edit_btn"
            android:layout_width="@dimen/small_widget_width"
            android:layout_height="@dimen/small_widget_height"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/edit"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_btn_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/small_widget_btn"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/list_btn"
            android:layout_width="@dimen/small_widget_width"
            android:layout_height="@dimen/small_widget_height"
            android:layout_marginRight="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/list"/>
    </LinearLayout>
    <Button
        android:id="@+id/small_widget_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/small_widget_width"
        android:layout_height="@dimen/small_widget_height"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/bump"/>

</RelativeLayout>
